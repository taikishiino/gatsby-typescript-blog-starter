{
    "compilerOptions": {
      "target": "esnext",
      "module": "commonjs",
      "moduleResolution": "node",
      "types": ["node"],
      "jsx": "react",
      "lib": ["dom", "esnext"],
      "experimentalDecorators": true,
      "esModuleInterop": true,
      "sourceMap": true,
      "noImplicitAny": true,
      "strict": true,
      "noEmit": true,
      "baseUrl": "./src",
      "paths": {
        "@/*": ["./*"]
      }
    },
    "include": ["./src/**/*"]
}